    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "run",
                "--no-debugger",
                "-p 9738"
            ],
            "jinja": true
        },
        {
            "name": "Python: Flask DB Upgrade",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "db",
                "upgrade"
            ]
        }

    ]
}