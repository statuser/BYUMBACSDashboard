{% extends "site_template/base.jinja" %}

{% block body %}
    {% block top_navigation %}
        {% include "site_template/navbar.jinja" %}
    {% endblock %}
    <div class="container-fluid">
        <div class="row">
            {% block sidebar %}
                {% include "site_template/sidebar.jinja" %}
            {% endblock %}
        
        
        
            {% block messages %}
                {{ render_messages() }}
            {% endblock %}

            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
            {% block content %}
            {% endblock %}
            </main>
            <footer role="footer" class="col-md-9 ml-sm-auto col-lg-10 bg-dark px-md-4">
            {% block footer %}
                {% include "site_template/footer.jinja" %}
            {% endblock %}
            </footer>
        </div>
    </div>
{% endblock %}

