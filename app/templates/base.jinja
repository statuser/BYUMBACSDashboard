{% from 'bootstrap/nav.html' import render_nav_item %}
{% from 'bootstrap/utils.html' import render_messages %}

<!doctype html>
<html class="no-js" lang="">

<head>
    {% block head %}
        <meta charset="utf-8">
        <meta name="description" content="">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        
        
        <title>
            {% if title %}
                Career Services Dashboard - {{ title }}
            {% else %}
                Career Services Dashboard
            {% endif %}
        </title>

        {% block styles %}
		    <! -- Bootstrap CSS -->
		    {{ bootstrap.load_css() }}
            <link rel="stylesheet" href="{{ url_for('static', filename='student.css') }}">
	    {% endblock %}
  

        <link rel="manifest" href="site.webmanifest">
        <link rel="apple-touch-icon" href="icon.png">
  <!-- Place favicon.ico in the root directory -->
    {% endblock %}
</head>

<body>

    <div class="container">
        {% block navbar %}
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                {# <div class="container-fluid"> #}
		            <div class="navbar-nav mr-auto">
                        <span class="navbar-brand">Career Services Dashboard:</span>
                        {{ render_nav_item('index', "Home") }}
                        {% if current_user.is_anonymous %}
                            {{ render_nav_item('login', "Login") }}
                        {% else %}
                            {{ render_nav_item('logout', "Logout") }}
                        {% endif %}
                    </div>
                {# </div> #}
            </nav>
        {% endblock %}

        {{ render_messages() }}
        {% block content %}
        {% endblock %}
    </div>
    {% block scripts %}
        {{ bootstrap.load_js() }}
    {% endblock %}
  
</body>

</html>
